@page
@model FarmApplication.Pages.Fields.DeleteFieldModel

<form method="post">
	<input hidden asp-for="field.FieldID"/>
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary pl-3">Remove Field</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="field.FieldName">Field Name</label>
			<input asp-for="field.FieldName" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="field.FieldSize">Size of Field (Acres)</label>
			<input asp-for="field.FieldSize" disabled class="form-control" />
		</div>
		<button type="submit" class="btn btn-danger" style="width:150px;">Delete Field</button>
		<a asp-page="Index" class="btn btn-primary" style="width:150px;">Back To List</a>
	</div>
</form>

<!-- this section causes errors caught in this page to be client side validated instead of server (page wont refresh).
	note - the custom validation in the .cs file will still be server validated.
-->
@section scripts{
	@{
		<partial name="_ValidationScriptsPartial"/>
	}
}